<div class="container">

  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-field" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-field" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-field" %>
    </div>

    <%= f.submit "Sign up", class: "btn btn-success" %>
    
  <% end %>

  <%= render "users/shared/links" %>
</div>